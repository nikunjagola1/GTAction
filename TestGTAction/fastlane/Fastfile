# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do

  desc "Take screenshots"
  lane :screenshot do
    snapshot
  end

  lane :beta do
     build_app(scheme: "TestGTAction")
  end

  desc "This will also make sure the profile is up to date"
  lane :testflight_beta do
	  match(git_url: "https://github.com/nikunjagola1/Certificates.git",
		  type: "appstore",
		  app_identifier: "com.tatvasoft.vidoetest")
          gym(scheme: "TestGTAction") # Build your app - more options available
          pilot
  end


end
